<% layout('layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">Add Drive</h1>
        <div class="col-md-6 offset-md-3">
            <form action="/drives" method="post">
                <div class="row" >
                    <div class="col-md-8">
                        <label class="form-label" for="title">Title</label>
                        <input class="form-control" type="text" id="title" placeholder="Enter Name" name="title" required>
                    </div>
                    <div class="dropdown mb-3 col-md-4">
                        <label class="form-label" for="driveTyprDropDown">Drive Type</label>
                        <select class="form-select" id="driveTyprDropDown" name="driveType" required>
                            <option selected>Choose...</option>
                            <option value="Health">Health</option>
                            <option value="Education">Education</option>
                            <option value="Nature">Nature</option>
                            <option value="Other">Other</option>
                        </select>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Venue</label>
                    <input class="form-control" type="text" id="location" placeholder="Enter venue" name="driveVenue"
                        required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="image">Image</label>
                    <input class="form-control" type="text" id="image" placeholder="Enter Image URL" name="driveImage">
                </div>
                <div class="row">
                    <div class="mb-3 col-md-6">
                        <label class="form-label" for="date">Date</label>
                        <input class="form-control" type="date" id="date" placeholder="Enter Date"
                            name="driveDate" required>
                    </div>

                    <div class="mb-3 col-md-6">
                        <label class="form-label" for="time">Time</label>
                        <input class="form-control" type="time" id="time" placeholder="Enter time" name="driveTime"
                            required>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="manager">Drive Manager</label>
                    <input class="form-control" type="text" id="manager" placeholder="Enter Name" name="driveManager"
                        required>
                </div>


                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="text" id="description" placeholder="Enter description"
                        name="driveDescription" required></textarea>
                </div>
              
                <div class="mb-3 d-grid">
                    <button class="btn btn-success">Add Drive</button>
                </div>
            </form>
            <a href="/drives">Cancel</a>
        </div>
    </div>