<% layout('layouts/boilerplate') %>
<div class="container justify-content-center align-items-center ">
    <div class="row">
        <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
            <div class="card shadow">
                <img src="https://images.unsplash.com/photo-1617450365226-9bf28c04e130?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxzZWFyY2h8MXx8bmdvfGVufDB8MHwwfHw%3D&auto=format&fit=crop&w=500&q=60" 
                    class="card-img-top" alt="">
                <div class="card-body">
                    <h5 class="card-title">Register</h5>
                    <form action="/register" method="post" class="validated-form" novalidate>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="typeOfUser" id="ngoSelectRadio" value="ngo">
                            <label class="form-check-label" for="ngoSelectRadio">NGO / Social Club</label>
                        </div>
                        <div class="form-check form-check-inline mb-3">
                            <input class="form-check-input" type="radio" name="typeOfUser" id="userSelectRadio" value="user" checked>
                            <label class="form-check-label" for="userSelectRadio">User</label>
                        </div>
                        
                        <div class="d-grid">
                            <button class="btn btn-success">Next</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
