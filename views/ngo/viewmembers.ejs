<% layout('layouts/boilerplate') %>
    <style>
        .card-horizontal {
            display: flex;
            flex: 1 1 auto;
        }
    </style>
    <div class="container">
        <h1>Members</h1>
        <div class="row">
            <% for(let view of views){ %>
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-12 mb-2">
                            <div class="card" style="width: 50rem;">
                                <div class="card-horizontal">
                                    <div class="col-md-3">
                                        <img class="img-fluid" src=<%= view.user_image? view.user_image: "https://upload.wikimedia.org/wikipedia/commons/b/b6/Image_created_with_a_mobile_phone.png" %>  alt="Card image cap">
                                    </div>
                                     <div class="card-body">
                                        <div class="card-horizontal">
                                        
                                        <h4 class="card-title"> <%= view.user_first_name %> </h4>
                                        <h4 class="card-title">&nbsp;</h4>

                                        <h4 class="card-title"> <%= view.user_middle_name %> </h4>
                                        <h4 class="card-title">&nbsp;</h4>

                                        <h4 class="card-title"> <%= view.user_last_name %> </h4>


                                        </div>
                                        <h6 class="card-subtitle mb-2 text-muted"><%= view.user_gender %></h6>
                                        <h6 class="card-subtitle mb-2 text-muted"><%= view.user_mail %></h6>

                                        <div class="card-horizontal">
                                        
                                        <h6 class="card-subtitle mb-2 "><%= view.user_city %></h6>
                                        <h6 class="card-subtitle mb-2 "> , <%= view.user_state %></h6>

                                    </div>   
                                
                                    </div>
                                </div>   
                                <a href="/person/<%= view.user_name %>" class="btn btn-success">View Profile</a>

                                </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            <% } %> 
        </div>
    </div>